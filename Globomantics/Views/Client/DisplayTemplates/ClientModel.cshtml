
@model Shared.Models.ClientModel     
    <tr>
        @if (Model.UboId != 0)
        {
        <td>@Model.Name @Model.Surname</td>
        <td>@Model.Citizenship</td>
        <td>@Model.BirthDate.ToString("ddd d MMM")</td>
        <td>@Model.CountryOfResidence @Model.Address</td>
        <td>@Model.Email</td>
        <td>@Model.PhoneNumber</td>
        <td>@Model.SharesOwned</td>
        <td>
            <a asp-controller="Client" asp-action="Delete">Delete</a>
        </td>
        }
    </tr>
